<%- include('../adminLayout/header.ejs') %>
<%- include('../adminLayout/sidebar.ejs') %>
<%- include('../adminLayout/navbar.ejs') %>
<div class="main-panel">
  <div class="content-wrapper">
    <div class="col">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Notifications</h4>
            <div class="notification-container">
              <div class="notification-item">
                <% if(productData.length> 0){
                    for(let i = 0;i < productData.length;i++ ){ %>
                <div class="alert alert-primary d-flex justify-content-between align-items-center" role="alert">
                  <p class="mb-0"><%= productData[i].distributor_id.distributer_name %> has added a new product. Please verify the product by clicking</p> 
                  <a href="/admin/productdetails/<%= productData[i]._id %>" class="btn btn-primary">View Details</a>
                </div>
                <% } %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../adminLayout/footer.ejs') %>
