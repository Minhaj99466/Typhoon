<%- include('../adminLayout/header.ejs') %>

  <%- include('../adminLayout/sidebar.ejs') %>

    <%- include('../adminLayout/navbar.ejs') %>

      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">

            <h1>User List</h1>
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">

                  <div class="table-responsive">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th> User_id </th>
                          <th> Name </th>
                          <th> Number </th>
                          <th> Email </th>
                          <th> Action </th>
                        </tr>
                      </thead>
                      <tbody>

                        <% if(user.length> 0){
                          for(let i = 0;i < user.length;i++ ){ %>
                            <tr>
                              <td>
                                <%= i+1 %>
                              </td>
                              <td>
                                <%= user[i].name %>
                              </td>
                              <td>
                                <%= user[i].mobile %>
                              </td>
                              <td>
                                <%= user[i].email %>
                              </td>
                              <td>

                       <% if(user[i].is_block===true){ %>
                                  <a href="/admin/unblock-user?id=<%= user[i]._id %>"
                                    class="btn btn-success">UnBlock</a>
                                  <% }else{ %>
                                    <a href="/admin/block-user?id=<%= user[i]._id %> " onclick="return confirm('Are you sure you need to block  <%= user[i].name %>?')"  class="btn btn-danger">Block</a>
                                    <% } %>

                                  </td>
                            </tr>
                            <% } } else{ %>
                              <tr>
                                <td colspan="5">Users not found</td>
                              </tr>
                              <% } %>


                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>


          </div>
        </div>
      </div>



      <%- include('../adminLayout/footer.ejs') %>